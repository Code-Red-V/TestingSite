@model IEnumerable<Testing.Models.Answer>

@{
    ViewBag.Title = "Админка";
    Layout = "/Views/Shared/_BackendLayout.cshtml";
}

<h1>Все варианты ответов</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Добавить новый вариант ответа</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTrue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTrue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.Text)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnswerId" class="btn btn-outline-secondary">Изменить</a>
                <a asp-action="Delete" asp-route-id="@item.AnswerId" class="btn btn-outline-danger"><img src="img/delete_img.png" width="24" height="24"></a>
            </td>
        </tr>
}
    </tbody>
</table>
