@model IEnumerable<Testing.Models.User>

@{
    ViewBag.Title = "Админка";
    Layout = "/Views/Shared/_BackendLayout.cshtml";
}

<h1>Пользователи</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Name )
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-outline-secondary">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-outline-danger"><img src="img/delete_img.png" width="24" height="24"></a>
                </td>
        </tr>
}
    </tbody>
</table>
