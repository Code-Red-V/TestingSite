@model IEnumerable<Testing.Models.Category>
@*@model Testing.Models.Category*@
@{
    ViewBag.Title = "Админка";
    Layout = "/Views/Shared/_BackendLayout.cshtml";
    Category cat = new Category();
}

<h1>Категории</h1>

<form asp-action="Filter">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@cat.CategoryId" class="control-label"></label>
        <select asp-for="@cat.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
    </div>
    <div class="form-group mb-3 mt-3">
        <input type="submit" value="Найти" class="btn btn-outline-primary" />
    </div>
</form>


<p>
    <a asp-action="Create" class="btn btn-outline-success">Создать категорию</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(ViewBag => item.Name)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-secondary">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger"><img src="img/delete_img.png" width="24" height="24"></a>
            </td>
        </tr>
}
    </tbody>
</table>
